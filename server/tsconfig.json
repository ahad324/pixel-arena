{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@services/*": ["src/services/*"],
      "@sockets/*": ["src/sockets/*"],
      "@config/*": ["src/config/*"],
      "@utils/*": ["src/utils/*"],
      "@app-types/*": ["src/types/*"]
    }
  },
  "include": ["src/**/*"]
}